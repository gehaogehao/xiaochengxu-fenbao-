.videoContainer{
    width: 100%;
    height: 100%;
}
.videoContainer .videoHeader{
    height: 60rpx;
    padding: 10px;
    display: flex;
}
.videoContainer .videoHeader image{
    width: 60rpx;
    height: 60rpx;
}
.videoContainer .videoHeader .search{
    flex: 1;
    height: 100%;
    border: 1px solid #eee;
    border-radius: 10rpx;
    margin: 0 20rpx;
}
.videoContainer .videoHeader .search input {
    width: 100%;
    height:100%;
}
.videoContainer .videoHeader .search .placeholder{
    text-align: center;
}
/* 导航区域 */  
.videoNav{
    display: flex;
    white-space: nowrap;
    height: 60rpx;
    margin: 20rpx 0;
}
.videoNav .navItem{
    margin-left: 50rpx;
    max-width: 200rpx;
}
.videoNav .navItem.active{
    border-bottom: 1px solid #d43c33;
}
.videoNav .navItem>view{
    font-size: 32rpx;
    height: 40rpx;
}
/* 视频区域 */
.videoList{
    background-color: #eee;
    height: calc(100vh - 148rpx)
}
.videoList .videoItem{
    padding: 0 4%;
    background-color: #fff;
    margin-top: 20rpx;
}
.videoList .videoItem video{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
}
.videoList .videoItem .videoTitle{
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
}
/* **** */
.videoList .footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
}
  
.videoList .footer .avatarUrl {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.videoList .footer .nickName {
    vertical-align: middle;
    font-size: 22rpx;
    margin-left: 10rpx;
}
.videoList .comments_praised {
    float: right;
}

.videoList .comments_praised .item {
    line-height: 60rpx;
    height: 60rpx;
    margin-left: 60rpx;
    font-size: 26rpx;
    position: relative;
}
/* 修改button 默认样式 开始*/
.videoList .comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
}
  
.videoList .comments_praised .btn:after {
    border-color: #fff;
}
/* 修改button 默认样式 结束*/
.videoList .comments_praised .item .iconfont {
    margin-left: 10rpx;
}
  
  
.videoList .comments_praised .item .showCount {
    position: absolute;
    top: -40rpx;
    font-size: 18rpx;
}
  
  
.videoList .comments_praised .item .iconfont.active {
    color: #d43c33;
}
  